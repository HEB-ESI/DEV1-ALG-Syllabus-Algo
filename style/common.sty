%---------------------------------------
% Citation en début de chapitre
%---------------------------------------
\newenvironment{Exergue}{%
	\begin{quote}
	\itshape
	}{
	\end{quote}
	\vskip2\baselineskip
	}

%---------------------------------------
% \begin{Emphase}...\end{Emphase}
% Met en évidence un ou des paragraphes
% début de cadre en gris
%---------------------------------------
\newenvironment{Emphase}%
  {%
	\par\nobreak%
	\bgroup%
		\color{gray}%
		\hskip-0.3cm%
		\rule{4cm}{0.5pt}%
		\hskip-4cm%
		\rule[-2em]{0.5pt}{2em}%
		\vskip-3.5em%
	\egroup%
  }{%
	\par\nobreak%
	\bgroup%
		\color{gray}%
		\vskip-2em%
		\hskip-0.3cm%
		\rule{0.5pt}{2em}%
		\rule{4cm}{0.5pt}%
		\hskip-4cm%
	\egroup%
  }

